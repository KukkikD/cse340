<!-- Content Heading Section -->
<% if (title) { %>
    <h1 class="title_h1"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

     <!-- Show Flash Message -->
    <%- messages() %>
     <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>

    <div class = "account-mgn">
      <h2> Welcome <%= locals.accountData.account_firstname %> </h2>
      <p>You're logged in.</p> 
      <a href="/account/edit/<%= locals.accountData.account_id %>"> Edit Account Information </a>

      <% if (locals.accountData.account_type === 'Admin' || locals.accountData.account_type === 'Employee') { %>
        <h3>Inventory Management</h3>
        <a href="/inv/">Manage Inventory</a>
      <% } %>

    </div>
